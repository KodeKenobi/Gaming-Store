<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>StackLayout with OnPlatform</Title>
      <Author>Altevir Cardoso Neto</Author>
      <Description>Create StackLayout with Margin and OnPlatform (WPF and macOS)</Description>
      <Shortcut>stlmargin</Shortcut>
    </Header>
    <Snippet>
      <Code Language="XAML">
        <![CDATA[
        <StackLayout Margin="{OnPlatform Default='0,0,0,0', macOS='0,0,0,0'}" />
        ]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>